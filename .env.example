# API
API_HOST=0.0.0.0
API_PORT=8080
API_CORS_ORIGIN=*
NEO_DEFAULT_NETWORK=testnet
DB_FILE=apps/api/data/nft-platform.db
NEO_RPC_URL=https://testnet1.neo.coz.io:443
NEO_CONTRACT_HASH=0x0000000000000000000000000000000000000000
NEO_CONTRACT_DIALECT=csharp

# Optional API multi-network profiles (same API instance serves multiple networks via ?network=)
DB_FILE_MAINNET=
DB_FILE_TESTNET=
DB_FILE_PRIVATE=
NEO_RPC_URL_MAINNET=https://mainnet1.neo.coz.io:443
NEO_RPC_URL_TESTNET=
NEO_RPC_URL_PRIVATE=
NEO_CONTRACT_HASH_MAINNET=
NEO_CONTRACT_HASH_TESTNET=
NEO_CONTRACT_HASH_PRIVATE=
NEO_CONTRACT_DIALECT_MAINNET=
NEO_CONTRACT_DIALECT_TESTNET=
NEO_CONTRACT_DIALECT_PRIVATE=

NEOFS_ENABLED=true
NEOFS_GATEWAY_BASE_URL=https://fs.neo.org
NEOFS_OBJECT_URL_TEMPLATE=https://fs.neo.org/{containerId}/{objectPath}
NEOFS_CONTAINER_URL_TEMPLATE=https://fs.neo.org/{containerId}
NEOFS_METADATA_TIMEOUT_MS=10000
GHOSTMARKET_ENABLED=true
GHOSTMARKET_BASE_URL=https://ghostmarket.io
GHOSTMARKET_COLLECTION_URL_TEMPLATE=https://ghostmarket.io/asset/neo/{contractHash}/{collectionId}
GHOSTMARKET_TOKEN_URL_TEMPLATE=https://ghostmarket.io/asset/neo/{contractHash}/{tokenId}
INDEXER_POLL_MS=5000
INDEXER_BATCH_SIZE=30
INDEXER_START_BLOCK=0
INDEXER_ENABLE_EVENTS=true

# Web
VITE_API_BASE_URL=http://localhost:8080/api
VITE_NEO_RPC_URL=https://testnet1.neo.coz.io:443
VITE_NEO_CONTRACT_HASH=0x0000000000000000000000000000000000000000
VITE_CONTRACT_DIALECT=csharp
VITE_DEV_API_PROXY_TARGET=http://localhost:8080

# Optional per-network overrides (wallet-driven)
VITE_API_BASE_URL_MAINNET=
VITE_API_BASE_URL_TESTNET=
VITE_API_BASE_URL_PRIVATE=
VITE_NEO_RPC_URL_MAINNET=https://mainnet1.neo.coz.io:443
VITE_NEO_RPC_URL_TESTNET=https://testnet1.neo.coz.io:443
VITE_NEO_RPC_URL_PRIVATE=
VITE_NEO_CONTRACT_HASH_MAINNET=
